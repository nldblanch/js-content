{
  "name": "javascript-learning-challenges",
  "version": "1.0.0",
  "description": "A collection of JavaScript coding challenges for learning and practice",
  "main": "webpage/dist/index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "play": "node challenges/5.\\ Rock\\ Paper\\ Scissors/rockPaperScissors.js",
    "secretMessage": "node challenges/7.\\ Coded\\ Message/codedMessage.js",
    "predeploy": "cd webpage && npm i && npm run build",
    "deploy": "gh-pages -d webpage/dist"
  },
  "keywords": [
    "javascript",
    "learning",
    "challenges",
    "coding",
    "practice"
  ],
  "author": "Nathan Blanch and Chester Gardner",
  "license": "MIT",
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/test/**"
    ]
  }
}
